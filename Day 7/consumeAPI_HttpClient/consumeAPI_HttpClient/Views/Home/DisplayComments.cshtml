<h1 style="text-align:center"> Comments </h1>

<table class="table table-bordered">
    @foreach (var item in ViewBag.comments)
    {
        <tr>
            <td> @item.postId </td>
            <td> @item.id </td>
            <td> @item.company </td>
            <td> @item.email </td>
            <td> @item.body </td>
        </tr>
    }
</table>

